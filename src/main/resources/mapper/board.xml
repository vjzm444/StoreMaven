<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nemew.blog.dao.BoardDao">


	<resultMap id="mainStore" type="com.nemew.blog.model.BoardModel">
		<result property="id" column="ID" />
		<result property="up_seq" column="UP_SEQ" />
		<result property="title" column="TITLE" />
		<result property="content" column="CONTENT" />
		<result property="email" column="EMAIL" />
		<result property="reg_date" column="REG_DATE" />
		<result property="imgYn" column="IMGYN" />
		<result property="price" column="PRICE" />
	</resultMap>
	
	<resultMap id="detailStore" type="com.nemew.blog.model.BoardModel">
		<result property="img_url" column="IMG_URL" />
	</resultMap>
	

	

	
	
	<!-- 전체게시물 조회 -->
	<select id="BoardList" resultMap="mainStore">
			SELECT * FROM shop
				<if test="up_seq != null and up_seq != '' ">
					<![CDATA[ 
					where up_seq= #{up_seq}
					]]>
				</if>
	</select>
	
	
	<!-- 대분류 상세이미지 리스트 조회 -->
	<select id="imgDetailBicList" resultMap="detailStore">
		SELECT img_url FROM shop_detail
			<if test="up_seq != null and up_seq != '' ">
				<![CDATA[ 
				
				where up_seq= #{up_seq}
				and division = 'D'
				]]>
			</if>
		order by id asc
	</select>
	
	<!-- 상세이미지 리스트 조회 -->
	<select id="imgDetailList" resultMap="detailStore">
		SELECT img_url FROM shop_detail
			<if test="up_seq != null and up_seq != '' ">
				<![CDATA[ 
				
				where up_seq= #{up_seq}
				and division = 'S'
				]]>
			</if>
		order by id asc
	</select>
	
	


</mapper>